<UserControl x:Class="MemoryGame.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource PrimaryBackground}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">
            <TextBlock Text="SETTINGS" Style="{StaticResource TitleTextStyle}"/>

            <Border BorderBrush="{StaticResource AccentColor}" BorderThickness="2" CornerRadius="10" 
                    Background="{StaticResource SecondaryBackground}">
                <StackPanel Margin="20">
                    <TextBlock Text="GAME OPTIONS" FontSize="20" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Sound Effects" Foreground="{StaticResource TextPrimary}" 
                                   FontSize="16" VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding SoundEffectsEnabled}" VerticalAlignment="Center"
                                  Template="{StaticResource ToggleSwitchTemplate}"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Background Music" Foreground="{StaticResource TextPrimary}" 
                                   FontSize="16" VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding BackgroundMusicEnabled}" VerticalAlignment="Center"
                                  Template="{StaticResource ToggleSwitchTemplate}"/>
                    </Grid>

                    

                    <TextBlock Text="Difficulty Level:" Foreground="{StaticResource TextPrimary}" 
                               FontSize="16" Margin="0,20,0,10"/>
                    <ComboBox ItemsSource="{Binding Difficulties}" SelectedIndex="{Binding SelectedDifficultyIndex}" 
                              Style="{StaticResource CustomComboBoxStyle}"/>

                    <TextBlock Text="Card Theme:" Foreground="{StaticResource TextPrimary}" 
                               FontSize="16" Margin="0,20,0,10"/>
                    <ComboBox ItemsSource="{Binding Themes}" SelectedIndex="{Binding SelectedThemeIndex}" 
                              Style="{StaticResource CustomComboBoxStyle}"/>
                </StackPanel>
            </Border>

            <Button Command="{Binding SaveSettingsCommand}" Content="SAVE SETTINGS" 
                    Width="200" Height="45" Margin="0,30,0,0" FontSize="16"
                    Style="{StaticResource PrimaryButtonStyle}">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2" Direction="330" 
                                     Color="#4cff00" Opacity="0.5" BlurRadius="8"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>