<UserControl x:Class="MemoryGame.Views.ScoresView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#f9f9f9">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <TextBlock Text="High Scores" FontSize="36" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,30"/>

            <!-- Placeholder for high scores table -->
            <Border BorderBrush="#dcdde1" BorderThickness="1" CornerRadius="5">
                <ListView Height="300" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Rank" Width="80"/>
                            <GridViewColumn Header="Player" Width="220"/>
                            <GridViewColumn Header="Score" Width="100"/>
                            <GridViewColumn Header="Date" Width="100"/>
                        </GridView>
                    </ListView.View>
                    <ListViewItem>
                        <TextBlock Text="No scores yet. Play a game to set a record!"/>
                    </ListViewItem>
                </ListView>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
