<UserControl x:Class="MemoryGame.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ABOUT" 
                   Style="{StaticResource TitleTextStyle}" 
                   Margin="0,40,0,20"/>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="{StaticResource SecondaryBackground}" 
                Margin="50,0,50,40" 
                CornerRadius="10"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1">

            <!-- Developer Info Section -->
            <StackPanel VerticalAlignment="Center" 
                      HorizontalAlignment="Center" 
                      Margin="20">
                <TextBlock Text="DEVELOPER" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondary}" 
                           Margin="0,0,0,5"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Ignat Dan" 
                           FontSize="30" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}" 
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Class: 10LF333" 
                           FontSize="16" 
                           Foreground="{StaticResource TextPrimary}" 
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Email: dan.ignat@student.unitbv.ro" 
                           FontSize="16" 
                           Foreground="{StaticResource AccentColor}" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>