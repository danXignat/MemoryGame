<UserControl x:Class="MemoryGame.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Game Status -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryBackground}" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding GameStatus}" 
                           Foreground="{StaticResource AccentColor}" FontSize="18"/>

                <TextBlock Grid.Column="1" Text="Score: " Foreground="{StaticResource TextSecondary}" 
                           FontSize="18" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="1" Text="{Binding Score}" Foreground="{StaticResource AccentColor}" 
                           FontSize="18" FontWeight="Bold" Margin="65,0,20,0"/>

                <TextBlock Grid.Column="2" Text="Attempts: " Foreground="{StaticResource TextSecondary}" 
                           FontSize="18" Margin="0,0,5,0"/>
                <TextBlock Grid.Column="2" Text="{Binding Attempts}" Foreground="{StaticResource AccentColor}" 
                           FontSize="18" FontWeight="Bold" Margin="85,0,0,0"/>
            </Grid>
        </Border>

        <!-- Game Board -->
        <Grid Grid.Row="1" Margin="20">
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="2" CornerRadius="10">
                <Grid>
                    <!-- Here you would add the card grid -->
                    <UniformGrid Rows="4" Columns="4" Margin="20">
                        <!-- This is just a placeholder. In a real implementation, you would bind to a collection of card items -->
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                        <Button Style="{StaticResource CardButtonStyle}"/>
                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Button Content="New Game" Width="120" Height="35" Margin="10,0"
                    Style="{StaticResource SecondaryButtonStyle}"/>

            <Button Content="Return to Menu" Width="120" Height="35" Margin="10,0"
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>